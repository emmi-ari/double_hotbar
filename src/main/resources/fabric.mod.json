{
  "schemaVersion": 1,
  "id": "double_hotbar",
  "version": "${version}",

  "name": "Double Hotbar",
  "description": "Adds a second hotbar that displays the third row of the inventory on the HUD. This provides a dual hotbar setup where you can easily swap/hotswap/cycle which of the two hotbars is active.",
  "authors": [
    "sidezbros"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/double-hotbar",
    "sources": "https://github.com/sidezbros/double_hotbar",
    "issues": "https://github.com/sidezbros/double_hotbar/issues"
  },

  "license": "GPLv3",
  "icon": "assets/double_hotbar/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.sidezbros.double_hotbar.DoubleHotbar"
    ]
  },
  "mixins": [
    "double_hotbar.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17",
    "fabric-key-binding-api-v1": "*"
  },
  "suggests": {
    "another-mod": "*"
  }
}
